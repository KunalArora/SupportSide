<% if @staff.errors.any? %>
  <div class='error_explanation'>
    <div class='error'>
      The form contains <%= pluralize(@staff.errors.count, 'error') %>
    </div>
    <ul>
      <% @staff.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
